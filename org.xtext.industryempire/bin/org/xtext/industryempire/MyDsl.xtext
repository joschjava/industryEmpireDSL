Vehicles:
	'Vehicles:'
	{Vehicles} (vehicles += SingleVehicle*)
;


SingleVehicle:
	name = ID  '[' 'speed' '->' speed = INT ':'
					'load' '->' load = INT ':'
					'tankSize' '->' tankSize = INT ':'
				'fuelConsumption' '->' fuelConsumption = DOUBLE ']'
;

