ClazzModel:
	element+= Element* 
;

Element:
	Resources | Factories | Vehicles | Cities; //Gruppe | Validator ClazzModel, Filter resourcen, length max 1

Cities:
	'Cities:'
	name += ID '[' 'x' '->' x = INT ':' 'y->' y = INT ':' factory += [SingleFactory]* (',' factory+=[SingleFactory])* ']'
;

