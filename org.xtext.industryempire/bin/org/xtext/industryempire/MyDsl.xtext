Factories:
	'Factories:'
	{Factories} (factories += SingleFactory*)	
;

SingleFactory:
		name = ID '[' ('in' '->' input=[SingleResource])? ':' ('out' '->'output=[SingleResource])? ']'
;

Resources:
	'Resources:'	
	{Resources} (resources += SingleResource*)	
	
;

SingleResource:
	//Two words not possible, how do i let it wait for [
	name = ID '[' 'cost' '->' cost = INT ']'
;

DOUBLE:  INT+'.'INT+;

